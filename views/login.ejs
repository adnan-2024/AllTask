<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <form method="post" class="max-w-[350px]  p-3 flex flex-col shadow-lg mx-auto mt-10" id="registerationForm" >
        <h1 class="text-md font-medium  text-center">Login</h1>
        
        
        <input type="email" class="border-b-2 p-2 focus:outline-none mt-2" id="email" placeholder="Enter Email" name="email">
        
        <input type="password"  class="border-b-2 p-2 mt-2 focus:outline-none" id="password" placeholder="Enter a Password" name="password">
        <span class=" text-red-500" id="error"></span>
        <span class=" text-blue-500 underline-offset-1 cursor-pointer"  id="loginerror" onclick="activateaccount()"></span>
        <button class="self-center bg-black text-white p-2 mt-2" onclick="Login()" >Login</button>
    </form>
</body>

<script>
let activationLink;
    async function activateaccount(){
    let response=await fetch(`${activationLink}`, {
        method: 'GET',
        headers: {
      'Content-Type': 'application/x-www-form-urlencoded'
    },
})
let data=await response.json();
if(data.success){
   alert("Acccount Validation Successfull")
}
    }
  async  function Login(){
  event.preventDefault();

         let spans=document.querySelectorAll("span");
         spans.forEach((span)=>{
            span.style.display="none";
         })
        let form=document.getElementById("registerationForm");
        let registerationFormData=new FormData(form);
        console.log(registerationFormData);
       let response=  await fetch('/login', {
        method: 'POST',
        headers: {
      'Content-Type': 'application/x-www-form-urlencoded'
    },
    body: new URLSearchParams(registerationFormData)
        
    })
    let data=await response.json();
  
    if(!data.success){
    let errorele=document.getElementById("error");
    errorele.style.display="block";
    errorele.innerHTML=data.message
    }
   if(data.success){
    window.location.href="http://localhost:8800/"
 
   
   }
   
    }
</script>
</html>